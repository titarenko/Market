@model IEnumerable<Market.Cqrsnes.Projection.Models.Article>

@{
    ViewBag.Title = "Articles";
    ViewBag.Tagline = "goods, products, whatever you want";
}

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Offers</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.OffersCount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no articles yet.</p>
}

<form action="@Url.Action("Create")" method="POST">
    <div class="clearfix">
        <label for="name">Name:</label>
        <div class="input">
            <input type="text" id="name" name="name"/>
            <button class="btn" type="submit">Create new</button>
        </div>
    </div>
</form>
